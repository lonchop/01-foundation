---
import MainLayout from "../layouts/MainLayout.astro";

// Component script

// Server only
const name = "Orangel Gonzalez";
const title = "Home";
---

<MainLayout title={title}>
	<h1 class="!text-3xl font-bold text-white">{name}</h1>

	<p class="text-white">Momento actual: {new Date().toLocaleTimeString()}</p>
	<p class="text-white" id="current-time"></p>

	<footer>
	</footer>

	<script>
		// Client only
		const currentTimeParagraph = document.getElementById("current-time") as HTMLParagraphElement;
		const footer = document.querySelector("footer") as HTMLElement;

		const currentYear: number = new Date().getFullYear();
		footer.innerHTML = `AÃ±o ${currentYear}`;

		currentTimeParagraph.innerHTML = `Momento actual real: ${new Date().toLocaleTimeString()}`;
	</script>
</MainLayout>